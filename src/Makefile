# compiler flags.  -g for debug, -O3 for optimization

CFLAGS=-g -O3

OBJS= tokeread.o tokenizer.o history.o

# first target is built by default
all: tokenizer

# include file dependencies
bst.o: bst.h
sortargs.o: bst.h

# $@=target, $^=prerequisites
sortargs: bst.o tokenizer.o
	cc -o $@ $^ $(CFLAGS)

tokenizer: $(OBJS)
	cc -o tokenizer $(CFLAGS) $(OBJS)

# deletes files generated by compilation
clean:
	rm -f *.o tokenizer

#run tokenizer

run:tokenizer
	./tokenizer
